<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_easycollect_right_16"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="119dp"
                    android:layout_marginTop="109dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_right_17"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="93dp"
                    android:layout_marginTop="45dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_right_18"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="74dp"
                    android:layout_marginTop="37dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_right_19"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="46dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_right_20"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="67dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_left"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@mipmap/bg_left" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_easycollect_left_11"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="109dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_left_12"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="46dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_left_13"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="86dp"
                    android:layout_marginTop="36dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_left_14"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="104dp"
                    android:layout_marginTop="46dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_left_15"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="122dp"
                    android:layout_marginTop="65dp"
                    android:background="@mipmap/img_fingerprint"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_easycollect_right"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/bg_right" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtUsbDevices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:text="设备："
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtCaptureSeq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:text="模式："
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinUsbDevices"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/spinCaptureSeq"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="left|center"
            android:paddingLeft="0dp"
            android:textColor="#ff000000"
            android:text="状态："
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/txtStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="left|center"
            android:paddingLeft="14dp"
            android:textColor="#ff000000"
            android:visibility="visible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="left|center"
            android:paddingLeft="0dp"
            android:textColor="#ff000000"
            android:text="当前进行："
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/txtFigureType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="left|center"
            android:paddingLeft="14dp"
            android:textColor="#ff000000"
            android:visibility="visible"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start_capture_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="采集" />

        <Button
            android:id="@+id/stop_capture_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="下一个" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffeeeeee"
                android:contentDescription="@string/preview_image"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
